<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6">
      <div class="form-project-edit">
        <h2 class="mt-4">Edit current project</h2>
        <%= simple_form_for @project do |f| %>
          <%= f.error_notification %>
            <div class="form-inputs">
               <%= f.input :title,
                  label: false,
                  placeholder: 'Project name',
                  autofocus: true %>
              <%= f.input :description,
                  label: false,
                  as: :text,
                  placeholder: 'Tell us about your project...'  %>
              <%= f.label 'Add or update tags' %>
              <%= f.input :tag_list,label: false, placeholder: 'music, video, beats, artist...' %>
              <%= f.input :published, label: "Mark as published?", as: :radio_buttons %>
            </div>
            <div class="form-actions d-flex justify-content-center">
              <%= f.button :submit, value: 'edit', class: "btn btn-dark py-3 mt-2" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
