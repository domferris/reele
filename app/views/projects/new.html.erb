<div class="container mb-4">
  <div class="row justify-content-center mb-4">
    <div class="col-xs-8 col-sm-8 mb-4">
      <div class="form-new-proj mb-4">
        <%= simple_form_for @project, html: {multipart: true} do |f| %>
          <%= f.error_notification %>
            <h2 class="mt-4">Project details</h2>
            <div class="form-inputs">
              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :title,
                      label: "Title",
                      autofocus: true,
                      placeholder: "New track" %>
                </div>

                <div class="col">
                  <%= f.input :media_type, collection: Project::MEDIA_TYPE,
                               label: "Audio or video project?", prompt: 'Select media type' %>
                </div>


              </div>

              <div class="form-row mt-2">
                <div class="col">
                  <%= f.label 'Add tags to your project (separated by commas)' %>
                  <%= f.input :tag_list,label: false, placeholder: 'A/V, mixdown, MPC-2000...' %>
                </div>

              </div>

              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :description, placeholder: 'Tell us about your project...' %>

                </div>
              </div>

              <div class="form-row">
                <div class="col ml-3">
                  <%= f.input :published, as: :radio_buttons, label: "Publish upon upload?" %>
                </div>
                <div class="col ml-3">
                  <%= f.input :category, collection: Project::CATEGORY, prompt: 'Select category' %>
                </div>
              </div>

            </div>
          <h2 class="mt-5 mb-3">Upload/embed files</h2>

          <div class="form-row">
            <div class="col mb-3">
              <%= f.label 'Upload an audio file'%>
              <%= cl_upload_tag(:video_id, resource_type: :video)%>
            </div>
            <div class="col mb-3">
              <%= f.input :photo, label: "Add an image", placeholder: 'URL to image' %>
            </div>
          </div>
          <%#= f.label 'Embed from Bandcamp, Soundcloud, Spotify, or Apple Music', class: "mt-2" %>
          <%= f.input :audio_url, label: 'Embed from Bandcamp, Soundcamp, Spotify, or Apple Music', placeholder: 'URL to project', class: "mt-2" %>
          <%= f.label 'Or add a video from Vimeo' %>
          <%= f.input :video_url, label: false, placeholder: 'Vimeo URL' %>

          <div class="d-flex justify-content-center">
            <%= f.button :submit, value: 'add project', class: 'btn btn-box-dark py-3 mt-2 ' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

