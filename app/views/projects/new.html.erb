<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-8 col-sm-8">
      <div class="form-new-proj">
        <%= simple_form_for @project do |f| %>
          <%= f.error_notification %>
            <h2 class="text-dark mt-4">Project details</h2>
            <div class="form-inputs">
              <div class="form-row">
                <div class="col">
                  <%= f.input :title,
                      label: "Title",
                      autofocus: true,
                      placeholder: "New track" %>
                </div>

                <div class="col">
                  <%= f.label 'Add tags' %>
                  <%= f.input :tag_list,label: false, placeholder: 'A/V, Mixdown, MPC-2000...' %>
                </div>

              </div>
              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :description,
                      label: "Describe your project",
                      as: :text,
                      placeholder: "Techniques, equipment and anything you'd like people to know"  %>
                </div>
              </div>

              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :media_type, collection: Project::MEDIA_TYPE,
                               label: "Audio or video project?", prompt: 'Select media type' %>
                </div>
                <div class="col ml-4">
                  <%= f.input :published, as: :radio_buttons, label: "Mark as published?" %>
                </div>
              </div>


              </div>
              <h2 class="text-dark pt-2 mt-4 mb-4">Upload/embed files</h2>

              <div class="form-row mt-2">
             <!--    <div class="col">
                  <%= f.input :image, as: :file, label: "Add a photo to your project"%>
                </div> -->

                <div class="col">
                  <%= f.label "Add audio/video file" %>
                  <%= cl_upload_tag(:video_id, resource_type: :video) %>
                </div>
              </div>


              <%= f.label 'embed from Bandcamp, Soundcloud, Spotify, or Apple Music', class: "mt-3" %>
              <%= f.input :audio_url, label: false, placeholder: 'Paste Bandcamp URL here...', class: "mt-3" %>
              <%= f.label 'Or add a video from Vimeo' %>
              <%= f.input :video_url, label: false, placeholder: 'Paste Vimeo URL', class: "mt-3" %>

              <div class="d-flex justify-content-center">
                <%= f.button :submit, value: 'Add project', class: 'btn btn btn-dark py-3 mt-3' %>
              </div>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</div>

