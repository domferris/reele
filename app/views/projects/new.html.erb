<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-8 col-sm-8">
      <div class="form-new-proj">
        <%= simple_form_for @project, html: {multipart: true} do |f| %>
          <%= f.error_notification %>
            <h2 class="text-dark mt-4">Details</h2>
            <div class="form-inputs">
              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :title,
                      label: "Title",
                      autofocus: true %>
                </div>

                <div class="col">
                  <%= f.label 'Add tags to your project' %>
                  <%= f.input :tag_list,label: false, placeholder: 'A/V, Mixdown, MPC-2000...' %>
                </div>
              </div>

              <div class="form-row mt-2">
                <div class="col">
                  <%= f.input :media_type, collection: Project::MEDIA_TYPE,
                               label: "Audio or video project?", prompt: 'Select media type' %>
                </div>

                <div class="col ml-3">
                  <%= f.input :published, as: :radio_buttons, label: "Publish upon upload?" %>
                </div>
              </div>

            </div>
          <h2 class="text-dark mt-4">Upload/embed file</h2>
          <%= f.label 'Upload an audio file' %>
          <div class="mb-3">
            <%= cl_upload_tag(:video_id, resource_type: :video)%>
          </div>
          <%= f.label 'Embed from Bandcamp, Soundcloud, Spotify, or Apple Music', class: "mt-2" %>
          <%= f.input :audio_url, label: false, placeholder: 'Paste URL here...', class: "mt-2" %>
          <%= f.label 'Or add a video from Vimeo' %>
          <%= f.input :video_url, label: false, placeholder: 'Vimeo URL' %>

          <div class="d-flex justify-content-center">
            <%= f.button :submit, value: 'add project', class: 'btn btn btn-dark py-3 mt-2 ' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

