<% if @featured.empty? %>
  <h3 class="text-center">No projects yet!</h3>
<% else %>
  <div class="user-featured-project-card">
    <%= link_to project_path(@featured.last) do %>
      <div class="user-featured-project-card-content">
        <% if @featured.last.photo != nil %>
          <%= image_tag @featured.last.photo, class: "project-image" %>
        <% else %>
          <%= image_tag "project-default.jpg", class: "project-image" %>
        <% end %>
        <div class="user-featured-project-card-info">
          <i class="fas fa-heart">23</i>
          <i class="fas fa-eye">50</i>
          <i class="fas fa-comment">15</i>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

