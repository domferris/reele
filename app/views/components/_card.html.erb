<div class="project-card">
  <!-- NEED TO CHANGE PATH OF THIS LINK TO PROJECT SHOW -->
  <%= @project_list do |project| %>
    <%= link_to project_path(project) do %>
    <div class="project-card-content">
      <%= image_tag "project-default.jpg", class: "project-image" %>
      <div class="project-card-info">
        <i class="fas fa-heart">23</i>
        <i class="fas fa-eye">50</i>
        <i class="fas fa-comment">15</i>
      </div>
    </div>
    <% end %>
  <% end %>

  <!-- NEED TO CHANGE PATH OF THIS LINK TO USER SHOW -->
  <%= link_to projects_path do %>
  <div class="project-card-user">
    <img src="" alt="" class="project-avatar">
    <span>username</span>
  </div>
  <% end %>
</div>
