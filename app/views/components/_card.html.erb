  <!-- NEED TO CHANGE PATH OF THIS LINK TO PROJECT SHOW -->
<% @project_list.reverse.each do |project| %>
  <div class="project-card">
    <%= link_to project_path(project) do %>
    <div class="project-card-content">
      <div class="proj-gradient"></div>
        <% if project.photo != nil %>
          <%= image_tag project.photo, class: "project-image" %>
        <% else %>
          <%= image_tag "project-default.jpg", class: "project-image" %>
        <% end %>
      <div class="project-card-info">
        <div class="proj-details">
          <p class="proj-title"><%= project.title %></p>
          <p class="proj-category"><%= project.category %></p>
        </div>
        <ul>
          <li>
            <% if project.likes > 1000 %>
              <i class="fas fa-heart"></i><%= project.likes.to_s[0..1] + "K" %>
            <% else %>
              <i class="fas fa-heart"></i><%= project.likes %>
            <% end %>
          </li>
          <li>
            <% if project.view_count > 1000 %>
              <i class="fas fa-eye"></i><%= project.view_count.to_s[0..2] + "K" %>
            <% else %>
              <i class="fas fa-eye"></i><%= project.view_count %>
            <% end %>

          </li>
        </ul>
      </div>
    </div>
    <% end %>
    <!-- NEED TO CHANGE PATH OF THIS LINK TO USER SHOW -->
    <div class="project-card-user">
      <%= link_to user_path(project.user.username) do %>
        <% if project.user.photo.attached? %>
            <%= cl_image_tag project.user.photo.key, class: 'project-avatar' %>
          <% else %>
            <img src="" alt="" class="project-avatar">
        <% end %>
        <span><%= project.user.username %></span>
      <% end %>
    </div>
  </div>
<% end %>
