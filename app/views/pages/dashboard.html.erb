<div class="dash-controls">
  <%= link_to "Edit account", edit_user_registration_path(current_user) %>
  <%= link_to "+ New Project", new_project_path %>
  <%= link_to "Messages", "#" %>
</div>


<div class="dash-projects">
  <% if @user.projects.present? %>
    <ul>
      <% @user.projects.each do |project| %>
        <li>
          <%= link_to project_path(project) do %>
            <div class="card-dash">
              <%= cl_image_tag project.photo.key if project.photo.attached? %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />

              <div class="card-dash-info">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
              </div>

              <div class="card-dash-controls">
                <%= link_to 'edit', edit_project_path(project) %>
                <%= link_to 'delete', project_path(project), method: :delete %>
              </div>

            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
